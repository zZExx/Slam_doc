{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "colcon: build",
            "type": "shell",
            "command": "rm -rf build install log && colcon build --packages-select forklift_bt",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "colcon: source setup",
            "type": "shell",
            "command": "source install/setup.bash",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "ros2: run node",
            "type": "shell",
            "command": "ros2 run forklift_bt forklift_bt_node",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "AMENT_PREFIX_PATH": "${workspaceFolder}/install:/opt/ros/humble",
                    "LD_LIBRARY_PATH": "${workspaceFolder}/install/forklift_bt/lib:${env:LD_LIBRARY_PATH}"
                }
            }
        }
    ]
}
