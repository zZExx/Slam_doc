{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++: Debug forklift_bt_node",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/forklift_bt/lib/forklift_bt/forklift_bt_node",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/install/forklift_bt/lib:${env:LD_LIBRARY_PATH}"
                },
                {
                    "name": "AMENT_PREFIX_PATH",
                    "value": "${workspaceFolder}/install:/opt/ros/humble"
                },
                {
                    "name": "RMW_IMPLEMENTATION",
                    "value": "rmw_fastrtps_cpp"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
