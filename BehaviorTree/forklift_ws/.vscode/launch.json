{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug forklift_bt_test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/install/forklift_bt/lib/forklift_bt/forklift_bt_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/install/forklift_bt/lib:${env:LD_LIBRARY_PATH}"
                },
                {
                    "name": "ROS_DOMAIN_ID",
                    "value": "${env:ROS_DOMAIN_ID}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_debug",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false,
                "engineLogging": false,
                "programOutput": true,
                "exceptions": true
            }
        }
    ]
}
